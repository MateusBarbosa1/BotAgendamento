generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agendamentos {
  id        String   @id @default(uuid()) // UUID gerado automaticamente
  servico String
  barbeiro String
  date  DateTime // Coluna para guardar datas e horas
  time  String   // Coluna para guardar apenas o hor√°rio no formato HH:mm
  name  String
  numero String
  horarioAgendamento DateTime
}
model HorariosBruno {
  diaSemana String @unique
  horarios String[]
}
model HorariosWallyson {
  diaSemana String @unique
  horarios String[]
}
